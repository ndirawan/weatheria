<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.HomeActivity"
	>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="30dp"
			android:background="@color/blue_tertiary"
			>
			<RelativeLayout
				android:id="@+id/ll_header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<include
					android:id="@+id/search_view"
					layout="@layout/search_container"
					/>
				<ImageView
					android:layout_marginTop="60dp"
					android:layout_below="@id/search_view"
					android:id="@+id/iv_location"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:src="@drawable/outline_location_on_48"/>
				<TextView
					android:id="@+id/location"
					android:layout_toEndOf="@id/iv_location"
					android:layout_centerVertical="true"
					android:layout_marginLeft="5dp"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Blitar" />
			</RelativeLayout>
			<LinearLayout
				android:id="@+id/container_main"
				android:layout_width="match_parent"
				android:layout_marginTop="20dp"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<ImageView
					android:visibility="visible"
					android:id="@+id/iv_icon"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:src="@drawable/cloud"
					/>
				<TextView
					android:id="@+id/feels_like"
					android:gravity="center"
					android:textColor="@color/white"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/feels_like"
					style="@style/TextAppearance.Material3.BodyLarge" />

				<LinearLayout
					android:id="@+id/temperature_info"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingHorizontal="20dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:layout_weight="1">

						<TextView
							android:textAlignment="center"
							android:id="@+id/temperature"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="30Â°c"
							android:textColor="@color/white"
							style="@style/TextAppearance.Material3.HeadlineLarge"
							android:textSize="70sp" />
					</LinearLayout>
				</LinearLayout>

				<TextView
					android:textAlignment="center"
					android:id="@+id/description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Kabut asap"
					android:textColor="@color/white"
					style="@style/TextAppearance.Material3.BodyLarge" />
			</LinearLayout>
			<androidx.cardview.widget.CardView
				android:layout_marginTop="25dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="15dp"
				android:elevation="10dp">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:background="@color/blue_primary"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					android:paddingHorizontal="15dp"
					>
					<RelativeLayout
						android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<ImageView
							android:id="@+id/iv_mist"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/humidity"/>
						<TextView
							android:id="@+id/tv_mist"
							android:textSize="15sp"
							android:layout_marginLeft="10dp"
							android:layout_toEndOf="@id/iv_mist"
							android:textColor="@color/white"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="10"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<ImageView
							android:id="@+id/iv_hot"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/sunset"/>
						<TextView
							android:id="@+id/tv_hot"
							android:textSize="15sp"
							android:layout_marginLeft="10dp"
							android:layout_toEndOf="@id/iv_hot"
							android:textColor="@color/white"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="10"/>
					</RelativeLayout>
					<RelativeLayout
						android:layout_weight="1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<ImageView
							android:id="@+id/iv_windy"
							android:layout_width="20dp"
							android:layout_height="20dp"
							android:src="@drawable/windy"/>
						<TextView
							android:id="@+id/tv_windy"
							android:textSize="15sp"
							android:layout_marginLeft="10dp"
							android:layout_toEndOf="@id/iv_windy"
							android:textColor="@color/white"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="100 km/h"/>
					</RelativeLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			<include
				android:layout_marginTop="25dp"
				android:id="@+id/card_today"
				layout="@layout/card_view_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
			<include
				android:layout_marginTop="25dp"
				android:id="@+id/card_next_forecast"
				layout="@layout/card_view_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout
		android:id="@+id/loading_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		>
		<TextView
			android:id="@+id/tv_app_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/weatheria"
			android:gravity="center"
			android:layout_marginBottom="10dp"
			android:letterSpacing="1"
			android:layout_below="@id/anim_loading"/>
		<com.airbnb.lottie.LottieAnimationView
			android:id="@+id/anim_loading"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			app:lottie_fileName="loading.json"
			android:layout_centerInParent="true"
			app:lottie_autoPlay="true"
			app:lottie_loop="true"
			/>
	</RelativeLayout>
</RelativeLayout>